<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="961dp"
        android:layout_height="0dp"
        android:layout_marginTop="106dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/view1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:menu="@menu/navigation" />


    <View
        android:id="@+id/view2"
        android:layout_width="972dp"
        android:layout_height="12dp"
        android:background="@color/colorPrimaryDark"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="578dp"
        android:layout_height="37dp"
        android:text="Evan Golub's Message Board"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="33sp"
        app:layout_constraintEnd_toStartOf="@+id/view1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="403dp"
        android:layout_height="49dp"
        android:layout_marginTop="54dp"
        android:text="Email: eolub@cs.umd.edu"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="405dp"
        android:layout_height="42dp"
        android:layout_marginTop="26dp"
        android:text="Phone: (301) 405-0180"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="405dp"
        android:layout_height="42dp"
        android:layout_marginTop="36dp"
        android:text="Location: IRB 1220"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="576dp"
        android:layout_height="54dp"
        android:layout_marginTop="28dp"
        android:text="Website: http://www.cs.umd.edu/~eolub/"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

</android.support.constraint.ConstraintLayout>